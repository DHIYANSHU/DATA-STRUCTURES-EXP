#include <stdio.h>
#include <limits.h>

#define ROWS 3
#define COLS 4

int findLargest(int matrix[ROWS][COLS]) {
    int maxVal = INT_MIN;
    for (int i = 0; i < ROWS; i++) {
        for (int j = 0; j < COLS; j++) {
            if (matrix[i][j] > maxVal) {
                maxVal = matrix[i][j];
            }
        }
    }
    return maxVal;
}

int main() {
    int matrix[ROWS][COLS] = {
        {1, 5, 9, 13},
        {2, 6, 10, 14},
        {3, 7, 11, 15}
    };
    int largest = findLargest(matrix);
    printf("Largest element in the matrix is: %d\n", largest);
    return 0;
}
