#include <stdio.h>
#include <string.h>
#include <stdbool.h>

bool isValid(char* s) {
    char stack[100];
    int top = -1;
    for (int i = 0; i < strlen(s); i++) {
        if (s[i] == '(' || s[i] == '[' || s[i] == '{') {
            stack[++top] = s[i];
        } else if (s[i] == ')' && top >= 0 && stack[top] == '(') {
            top--;
        } else if (s[i] == ']' && top >= 0 && stack[top] == '[') {
            top--;
        } else if (s[i] == '}' && top >= 0 && stack[top] == '{') {
            top--;
        } else {
            return false;
        }
    }
    return top == -1;
}

int main() {
    char s1[] = "()[]{}";
    char s2[] = "([)]";
    printf("'%s' is valid: %s\n", s1, isValid(s1) ? "true" : "false");
    printf("'%s' is valid: %s\n", s2, isValid(s2) ? "true" : "false");
    return 0;
}
