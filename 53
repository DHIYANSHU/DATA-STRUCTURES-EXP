#include <stdio.h>
#include <stdbool.h>

void findRepeatedIndices(char arr[], int size) {
    bool found[256] = {false};
    printf("Indices of repeated characters: \n");
    for (int i = 0; i < size; i++) {
        for (int j = i + 1; j < size; j++) {
            if (arr[i] == arr[j] && !found[arr[i]]) {
                printf("Character '%c' repeated at indices %d and %d\n", arr[i], i, j);
                found[arr[i]] = true;
            }
        }
    }
}

int main() {
    char arr[] = {'a', 'b', 'c', 'a', 'd', 'e', 'c'};
    int size = sizeof(arr) / sizeof(arr[0]);
    findRepeatedIndices(arr, size);
    return 0;
}
